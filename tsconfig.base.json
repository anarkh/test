{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "module": "commonjs",
    "lib": ["ES2021.String"],
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "types": ["jest", "node"],
    "paths": {
      "@utils/*": ["utils/*"]
    }
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": ["node_modules"]
}